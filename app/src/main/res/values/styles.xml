<resources>

    <!-- Base application theme no toolbar. login, forgot password screen use it-->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base application theme no toolbar. -->

    <!-- Base application theme home screen. -->
    <style name="AppThemeHome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBackgroundHome</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Base application theme home screen. -->

    <!-- Define 3 style with 3 font. Using style instead off typeFont help avoiding the annoying alert in xml-->
    <style name="SalesforceSans_Ligh_Style">
        <item name="fontPath">fonts/SalesforceSans-Light.ttf</item>
    </style>
    <style name="SalesforceSans_Bold_Style">
        <item name="fontPath">fonts/SalesforceSans-Bold.ttf</item>
    </style>
    <style name="SalesforceSans_Regular_Style">
        <item name="fontPath">fonts/SalesforceSans-Regular.ttf</item>
    </style>
    <!-- Define 3 style with 3 font. Using style instead off typeFont help avoiding the annoying alert in xml -->
</resources>
